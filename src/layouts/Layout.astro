---
export interface Props {
  title: string
}

const props = Astro.props
const title = props.title
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="view-transition" content="same-origin" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=K2D:wght@300;400;900&family=Oswald:wght@200..700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <footer>Miquel Tor√°n. Todos los derechos reservados. {new Date().getFullYear()}</footer>

    <style lang="scss" is:global>
      @import '@/sass/global.scss';

      footer {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 100px;
        width: 100%;
        height: 50px;
        background-color: var(--colorBackground);
        color: var(--colorText2);
        font-size: 14px;
      }
    </style>
  </body>

  <script>
    import { animReveal } from '@/utils/reveal'

    window.onload = () => {
      setTimeout(() => animReveal(), 100)
    }
  </script>
</html>
